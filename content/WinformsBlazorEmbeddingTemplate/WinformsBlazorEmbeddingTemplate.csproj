<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <LangVersion>latestmajor</LangVersion>
        <Nullable>enable</Nullable>
        <UseWindowsForms>true</UseWindowsForms>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Components.WebView.WindowsForms" Version="8.0.70" />
      <PackageReference Include="MudBlazor" Version="7.3.0" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Resources\index.html" />
        <None Remove="Resources\app.js" />
        <None Remove="Resources\app.css" />
        <None Remove="Resources\app.ico" />
        <None Remove="Resources\MudBlazor.min.css" />
        <None Remove="Resources\MudBlazor.min.js" />
        <None Remove="Resources\WebView2Loader.dll" />
        <EmbeddedResource Include="Resources\index.html" />
        <EmbeddedResource Include="Resources\app.js" />
        <EmbeddedResource Include="Resources\app.css" />
        <EmbeddedResource Include="Resources\app.ico" />
        <EmbeddedResource Include="Resources\MudBlazor.min.css" />
        <EmbeddedResource Include="Resources\MudBlazor.min.js" />
        <EmbeddedResource Include="Resources\WebView2Loader.dll" />
    </ItemGroup>

</Project>